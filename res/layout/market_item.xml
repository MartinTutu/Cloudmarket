<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@color/gray_bg"
    >

    <FrameLayout
        android:id="@+id/fl_siv"
        android:layout_margin="10dp" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#CDCDC1"
        android:padding="1dp"
        >
	    <com.loopj.android.image.SmartImageView 
	        android:id="@+id/siv"
	        android:layout_width="90dp"
	        android:layout_height="70dp"
	        android:background="#FFFFFF"
	        android:src="@drawable/ic_launcher"
	        android:layout_centerVertical="true"
	        />        
    </FrameLayout>

    <TextView
        android:id="@+id/tv_title" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="超市标题"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_toRightOf="@id/fl_siv"
        android:paddingTop="8dp"
        android:singleLine="true"
        />
    <LinearLayout 
        android:id="@+id/linerlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_toRightOf="@id/fl_siv"
        android:paddingTop="3dp"
        android:paddingLeft="10dp"
        >
        <TextView 
            android:id="@+id/tv_mark" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="评分"
	        android:textColor="#ff9933"
	        android:textSize="12sp"
	        android:paddingRight="5dp"
	        />
        <View style="@style/PersonalLine1" />
        <TextView 
            android:id="@+id/tv_type" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="类型"
	        android:textSize="12sp"
	        android:textColor="#006699"
	        android:paddingLeft="5dp"
	        />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_trading_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linerlayout1"
        android:layout_toRightOf="@id/fl_siv"
        android:textColor="#8A8A8A"
        android:paddingTop="3dp"
        android:paddingLeft="10dp"
        android:text="商圈"
        />
	<RelativeLayout 
        android:id="@+id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_trading_area"
        android:layout_toRightOf="@id/fl_siv"
        android:gravity="bottom"
        android:paddingTop="3dp"
        >
        <TextView 
            android:id="@+id/tv_qisong" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="¥100起"
	        android:textColor="#ff0033"
	        android:textSize="18sp"
	        android:layout_alignParentLeft="true"
	        />
        <TextView 
            android:id="@+id/tv_distance" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="1.0km"
	        android:textSize="12sp"
	        android:textColor="#66cc66"
	        android:gravity="right"
	        android:layout_toRightOf="@id/tv_qisong"
	        android:layout_alignParentRight="true"
	        android:layout_alignBottom="@id/tv_qisong"
	        />
    </RelativeLayout>

</RelativeLayout>