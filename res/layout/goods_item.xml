<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/gray_bg"
    >
   
    <FrameLayout
        android:id="@+id/goods_fl_siv"
        android:layout_margin="10dp" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#CDCDC1"
        android:padding="1dp"
        >
	    <com.loopj.android.image.SmartImageView 
	        android:id="@+id/goods_siv"
	        android:layout_width="90dp"
	        android:layout_height="70dp"
	        android:background="#FFFFFF"
	        android:src="@drawable/ic_launcher"
	        android:layout_centerVertical="true"
	        />        
    </FrameLayout>

    <TextView
        android:id="@+id/goods_tv_title" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商品标题"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_toRightOf="@id/goods_fl_siv"
        android:paddingTop="8dp"
        android:singleLine="true"
        />
    <LinearLayout 
        android:id="@+id/goods_linerlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_tv_title"
        android:layout_toRightOf="@id/goods_fl_siv"
        android:paddingTop="3dp"
        android:paddingLeft="10dp"
        >
        <TextView 
            android:id="@+id/goods_tv_xiaoliang"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="销量"
	        android:textColor="#ff9933"
	        android:textSize="12sp"
	        android:paddingRight="5dp"
	        />
        <View style="@style/PersonalLine1" />
        <TextView 
            android:id="@+id/goods_tv_type" 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="分类"
	        android:textSize="12sp"
	        android:textColor="#006699"
	        android:paddingLeft="5dp"
	        />
        <View style="@style/PersonalLine1" />
        <TextView 
            android:id="@+id/goods_tv_number"
        	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="数量"
	        android:textSize="12sp"
	        android:textColor="#66cc66"
	        android:paddingLeft="5dp"
	        />
    </LinearLayout>
    <TextView
        android:id="@+id/goods_tv_detail"        	
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_linerlayout1"
        android:layout_toRightOf="@id/goods_fl_siv"
        android:textColor="#8A8A8A"
        android:paddingTop="3dp"
        android:paddingLeft="10dp"
        android:text="商品描述：null"
        />
	<RelativeLayout 
        android:id="@+id/goods_relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_tv_detail"
        android:layout_toRightOf="@id/goods_fl_siv"
        android:gravity="bottom"
        android:paddingTop="3dp"
        >
        <TextView 
            android:id="@+id/goods_tv_jiage" 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="价格"
	        android:textColor="#ff0033"
	        android:textSize="18sp"
	        android:layout_alignParentLeft="true"
	        />
        
    </RelativeLayout>
    

</RelativeLayout>
