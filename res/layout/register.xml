<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#0099cc">
    <TextView  
        android:id="@+id/txt1"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:layout_margin="30dp"  
        android:gravity="center_horizontal"  
        android:text="注册界面"  
        android:textColor="#ffffff"  
        android:textSize="35dp" />  
  
    <TextView  
        android:id="@+id/txtname1"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_below="@id/txt1"  
        android:padding="6dp"
        android:layout_marginBottom="30dp"  
        android:layout_marginRight="5dp"
        android:textColor="#ffffff"
        android:text="帐号:"  
        android:textSize="28dp" />  
  
    <EditText  
        android:id="@+id/edname1"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_alignParentRight="true"  
        android:layout_below="@id/txt1"  
        android:layout_toRightOf="@id/txtname1"  
        android:layout_marginBottom="30dp" />  
  
    <TextView  
        android:id="@+id/txtpassword1"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_below="@id/txtname1"
        android:padding="6dp"  
        android:layout_marginRight="5dp"
        android:layout_marginBottom="30dp" 
        android:textColor="#ffffff" 
        android:text="密码:"  
        android:textSize="28dp" />  
  
    <EditText  
        android:id="@+id/edpassword1"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_alignParentRight="true"  
        android:layout_below="@id/edname1"  
        android:layout_toRightOf="@id/txtpassword1" 
        android:layout_marginBottom="30dp"/>  
        
    <TextView  
        android:id="@+id/txtaddress1"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_below="@id/txtpassword1"  
        android:layout_marginRight="5dp"  
        android:layout_marginBottom="30dp"
        android:padding="6dp"
        android:textColor="#ffffff"
        android:text="地址:"  
        android:textSize="28dp" />  
  
    <EditText  
        android:id="@+id/edaddress1"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_alignParentRight="true"  
        android:layout_below="@id/edpassword1"  
        android:layout_toRightOf="@id/txtaddress1" 
        android:layout_marginBottom="30dp"/>
    
    <TextView  
        android:id="@+id/txttel1"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_below="@id/txtaddress1"  
        android:layout_marginRight="5dp"  
        android:padding="6dp"
        android:textColor="#ffffff"
        android:text="电话:"  
        android:textSize="28dp" />  
  
    <EditText  
        android:id="@+id/edtel1"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_alignParentRight="true"  
        android:layout_below="@id/edaddress1"  
        android:layout_toRightOf="@id/txttel1" 
        />
  
    <LinearLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:layout_below="@id/edtel1"  
        android:layout_marginTop="30dp"  
        android:gravity="center_horizontal"  
        android:orientation="horizontal" >  
  
        <Button  
            android:id="@+id/btregister1"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"  
            android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:paddingLeft="30dp"
	        android:paddingRight="30dp"
	        android:layout_marginRight="20dp"
	        android:background="#90EE90"
	        android:textColor="#FFFAF0" 
            android:text="提交数据" />  
    </LinearLayout> 

</RelativeLayout>
