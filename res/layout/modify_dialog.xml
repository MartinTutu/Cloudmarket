<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"    
    android:background="#0099cc" >
 
    <TextView   
        android:id="@+id/modify_txt_address"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_below="@id/login"  
        android:layout_marginRight="5dp" 
        android:layout_marginTop="10dp"
        android:padding="6dp" 
        android:layout_marginBottom="30dp" 
        android:textColor="#FFFFFF"  
        android:textSize="18dp"  
        android:text="地址:"/>  
    <EditText   
        android:id="@+id/modify_ed_address"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_marginBottom="30dp"  
        android:layout_toRightOf="@id/modify_txt_address"  
        android:layout_alignParentRight="true"  
        android:hint="请输入订单地址"/>  
    <TextView   
        android:id="@+id/modify_txt_tel"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_below="@id/modify_txt_address"  
        android:padding="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"  
        android:textSize="18dp"
        android:textColor="#FFFFFF"   
        android:text="电话:"/>  
    <EditText   
        android:id="@+id/modify_ed_tel"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_below="@id/modify_ed_address"  
        android:layout_toRightOf="@id/modify_txt_tel"  
        android:layout_alignParentRight="true"  
        android:inputType="phone"  
        android:hint="请输入订单电话"/>  

</RelativeLayout>
